<%= form_for :album do |f| %>
    <h4>
      &nbsp;&nbsp;&nbsp;&nbsp; <label>My Avatar</label>
      <%#= f.file_field :image %>
      <%= f.file_field :avatar%>
      <%= f.hidden_field :avatar_cache %>
      <%= f.hidden_field :profile_picture,:value=>true %>
      <%= f.hidden_field :user_id,:value=>current_user.id %>
      <br/>
      <br/>
      &nbsp;&nbsp;&nbsp;&nbsp;Set As Profile Pic <%= f.radio_button :profile_picture, true  %> Yes
      <%= f.radio_button :profile_picture, false ,:checked=>true %> No

    </h4>
    <%=f.submit "Upload Photo",:class=>"btn"%>
<% end %>