<h4>Listing Postsasdasd</h4>
<%= link_to 'New post', new_post_path,:class=>"btn" %>
<table class="table table-striped" >
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

  <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.text %></td>
        <td> <button type="submit" class="btn"><%= link_to 'Show', post_path(post) %></button></td>
        <td> <button type="submit" class="btn"><%= link_to 'Edit', edit_post_path(post) %></button></td>
        <td> <button type="submit" class="btn"><%= link_to 'Destroy', post_path(post),
                        method: :delete, data: { confirm: 'Are you sure?' } %></button></td>
      </tr>
  <% end %>
</table>